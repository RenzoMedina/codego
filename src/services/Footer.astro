---
import { Icon } from 'astro-icon/components';
import Menu from "../components/Menu.astro";
import Button from '../components/Button.astro';
import Social from '../components/Social.astro';
import { APP_NAME } from '../assets/js/data';
---
<footer>
    <div class="card-footer">
        <Icon name="logoLight"/>
        <Button name="Trabajamos juntos" class="ghost-accent value" />
        <Menu/>
        <Social/>
        <div class="company">
            <Icon name={"copyright"}/>
            <p>{APP_NAME}.com All rights reserved.</p>
        </div>
    </div>
</footer>
<style>
    footer{
        background: var(--text-color-500);
        margin-top: 3rem;
    }
    .card-footer{
        padding: 3rem 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    [data-icon]{
        font-size: 7.5rem;
        margin-bottom: 1.5rem;
    }
    [data-icon="copyright"]{
        font-size: 1rem;
        margin-bottom: 0;
        margin-right: 3px;
    }
    .company{
        display: flex;
        justify-content: ce;
        align-items: center;
        color: var(--bg-800);
        font-family: var(--text-content);
        font-size: .96rem;
    }
</style>